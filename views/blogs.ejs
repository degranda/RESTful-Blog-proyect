<% include partials/head %>

<main class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Diego's Blog</h1>
        </div>
    </div>

    <div class="row">
        <% blogs.forEach(function(blog){ %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img class="main-post_img" src="<%= blog.img %>" alt="...">
              <div class="caption">
                <h3><%= blog.title %></h3>
                <p class="lead"><%= blog.body.substring(0,80)%> ...</p>
                <p><a href="/blogs/<%=blog._id%>" class="btn btn-primary" role="button">Leer m√°s</a></p>
              </div>
            </div>
          </div>
        <% }); %>
    </div>
</main>

<% include partials/foot %>